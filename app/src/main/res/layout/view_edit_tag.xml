<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:weightSum="8"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/tag_label"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        style="@style/h2"
        android:fontFamily="sans-serif-condensed"
        tools:text="Arabic"/>

    <!--
        Dummy item to prevent AutoCompleteTextView from receiving focus
        http://stackoverflow.com/questions/1555109/stop-edittext-from-gaining-focus-at-activity-startup
    -->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <EditText
        android:id="@+id/tag_label_edit"
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLength="30"
        android:layout_gravity="center_vertical"
        android:inputType="textAutoComplete|textCapWords"
        android:visibility="gone"
        style="@style/h1"
        android:nextFocusUp="@id/label"
        android:nextFocusLeft="@id/label"/>

    <ViewFlipper
        android:id="@+id/edit_flipper"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">
            <ImageButton
                android:id="@+id/edit"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/delete"
                android:src="@drawable/ic_delete_forever_black_24dp"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/save"
            android:src="@drawable/ic_save_black_24dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ViewFlipper>
</LinearLayout>
