<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_large">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/h1"
        android:fontFamily="sans-serif-light"
        android:text="@string/tag_editor_ucf"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/h3"
        android:fontFamily="sans-serif"
        android:textColor="@color/r900"
        android:textAlignment="center"
        android:padding="@dimen/spacing_medium"
        android:visibility="gone"
        tools:text="Test Message"/>

    <!--
        Dummy item to prevent AutoCompleteTextView from receiving focus
        http://stackoverflow.com/questions/1555109/stop-edittext-from-gaining-focus-at-activity-startup
    -->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/label"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/tag_label_ucf"
            android:maxLength="30"
            android:inputType="textAutoComplete|textCapWords"
            style="@style/h1"
            android:layout_gravity="center_vertical"
            android:nextFocusUp="@id/label"
            android:nextFocusLeft="@id/label"/>

        <fastphrase.com.views.IconTextButtonView
            android:id="@+id/add"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout
            android:id="@+id/tag_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </ScrollView>


</LinearLayout>