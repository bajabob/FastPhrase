<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- notification drawer -->
        <item name="colorPrimaryDark">@color/p700</item>
        <item name="android:typeface">monospace</item>

        <!-- edit text line color -->
        <item name="colorControlNormal">@color/pa400</item>
        <item name="colorControlActivated">@color/pa400</item>
        <item name="colorControlHighlight">@color/pa400</item>

    </style>

    <style name="AppThemeRecord" parent="AppTheme">
        <!-- notification drawer -->
        <item name="colorPrimaryDark">@color/r700</item>

        <item name="colorControlNormal">@color/ra400</item>
        <item name="colorControlActivated">@color/ra400</item>
        <item name="colorControlHighlight">@color/ra400</item>
    </style>

    <!-- TEXT    ####################################################-->
    <style name="h0" parent="TextAppearance.AppCompat.Headline"></style>
    <style name="h1" parent="TextAppearance.AppCompat.Large"></style>
    <style name="h2" parent="TextAppearance.AppCompat.Medium"></style>
    <style name="h3" parent="TextAppearance.AppCompat.Small"></style>
    <style name="h4" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- BUTTONS ####################################################-->
    <style name="button_h0" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_h1" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- FAB     ####################################################-->
    <style name="floating_action_button">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

</resources>
